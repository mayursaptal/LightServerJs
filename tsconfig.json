{
  "compilerOptions": {
    "target": "ES2020", // ES target version
    "module": "ESNext", // Module type (ESM)
    "rootDir": "./src", // Root folder for your source code
    "outDir": "./dist", // Output folder for compiled files
    "moduleResolution": "node", // Resolves node-style modules
    "esModuleInterop": true, // For compatibility with ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true, // Important: Generate declaration files
    "declarationDir": "./dist/types", // Folder where declaration files will be placed
    "sourceMap": true // Generate source maps (optional)
  },
  "include": [
    "src" // Include source files
  ],
  "exclude": [
    "node_modules",
    "dist" // Exclude dist to avoid duplicate compilation
  ]
}
