{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  